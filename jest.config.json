{
  "clearMocks": true,
  "testEnvironment": "node",
  "testMatch": [ "**/*.test.ts" ],
  "testRunner": "jest-circus/runner",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.json",
      "diagnostics": {
        "warnOnly": true
      }
    }
  },
  "preset": "ts-jest",
  "moduleFileExtensions": [ "js", "ts" ],
  "modulePaths": [ "<rootDir>/src" ]
}
